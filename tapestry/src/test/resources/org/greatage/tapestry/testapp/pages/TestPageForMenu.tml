<html
		xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
		xmlns:c="tapestry-library:common"
		xmlns:p="tapestry:parameter">

<p>
	<span id="test1">
		<c:menu/>
	</span>
	<span id="test2">
		<c:menu class="foo bar"/>
	</span>
	<span id="test3">
		<c:menu actions="action1,_action2,action3"/>
	</span>
	<span id="test4">
		<c:menu actions="action1,_action2,action3" context="literal:false"/>
	</span>
	<span id="test5">
		<c:menu>
			<c:menuitem name="action1"/>
			<c:menuitem name="action2" label="Test"/>
			<c:menuitem name="action3" event="save"/>
			<c:menuitem name="action4" event="save" submitForm="true"/>
			<c:menuitem name="action5" page="testpageformenu"/>
			<c:menuitem name="action6" selected="true"/>
		</c:menu>
	</span>
	<span id="test6">
		<c:menu>
			<c:menuitem name="action1">Action1</c:menuitem>
			<c:menuitem name="action2" label="Test">Action2</c:menuitem>
			<c:menuitem name="action3" event="save">Action3</c:menuitem>
			<c:menuitem name="action4" event="save" submitForm="true">Action4</c:menuitem>
			<c:menuitem name="action5" page="testpageformenu">Action5</c:menuitem>
			<c:menuitem name="action6" selected="true">Action6</c:menuitem>
		</c:menu>
	</span>
	<span id="test7">
		<c:menu actions="action2,action3,_action6">
			<c:menuitem name="action1">
				<p:action1MenuItem>Action1Override</p:action1MenuItem>
			</c:menuitem>
			<c:menuitem name="action3"/>
			<p:action3MenuItem>Action3Override</p:action3MenuItem>
		</c:menu>
	</span>
	<span id="test8">
		<c:menu actions="action2,action3,_action6" context="literal:true">
			<p:action3MenuItem>Action3Override</p:action3MenuItem>
		</c:menu>
	</span>
</p>
</html>