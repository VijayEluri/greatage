<t:container
		xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
		xmlns:p="tapestry:parameter">
	<t:if test="context.header">
		<th t:id="border">
			<t:delegate to="header"/>
		</th>
		<p:else>
			<td>
				<t:delegate to="body"/>
			</td>
		</p:else>
	</t:if>
	<t:block id="defaultHeader">
		<a t:id="sortLink">${model.label}</a>
	</t:block>
	<t:block id="defaultBody">
		<span t:id="beanProperty"/>
	</t:block>
</t:container>
